// Place your settings in this file to overwrite the default settings
{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.fontSize": 13,
    "editor.mouseWheelScrollSensitivity": 3,
    "editor.minimap.enabled": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,

    "[typescript]": {
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "[css]": {
        "editor.tabSize": 2
    },
    "[scss]": {
        "editor.tabSize": 2
    },
    "[terraform]": {
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.tabSize": 2
    },

    "editor.codeActionsOnSave": {
        "source.fixAll.tslint": true
    },

    "vim.handleKeys": { 
        "<C-f>": false,
        "<C-k>": false,
    },
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "<C-k>",
                "<C-o>"
            ],
            "commands": [
                "workbench.action.files.openFolder"
            ]
        },
        {
            "before": [
                "<C-o>"
            ],
            "commands": [
                "workbench.action.files.openFile"
            ]
        }
    ],

    "typescript.updateImportsOnFileMove.enabled": "always",

    "telemetry.telemetryLevel": "off",
    "oracledevtools.bookmarkFileFolder": "C:\\Users\\JLUTTEKE\\Oracle\\oracle.oracledevtools",
    "oracledevtools.download.otherFolder": "C:\\Users\\JLUTTEKE\\downloads",
    "oracledevtools.connectionConfiguration.configFilesFolder": "C:\\Users\\JLUTTEKE\\Oracle\\network\\admin",
    "oracledevtools.connectionConfiguration.walletFileFolder": "C:\\Users\\JLUTTEKE\\Oracle\\network\\admin",
    "files.associations": {
        "*.tmpl": "terraform"
    }
}